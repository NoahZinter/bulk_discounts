<div class="container">
  <%= render 'partials/header' %>
  <div class="row">
    <h1>Admin Merchant Index</h1>
  </div>

  <div class="row merchants">

    <div class="col" id="enabled">
      <h3>Enabled</h3>
      <ul id="enabled-merchants">
        <% @enabled.each do |m| %>
          <%= react_component("Merchant", {
            merchant: m,
            url: admin_merchant_path(m.id),
            auth_token: form_authenticity_token.to_s
          }) %>
        <% end %>
      </ul>
    </div>

    <div class="col" id="disabled">
      <h3>Disabled</h3>
      <ul id="disabled-merchants">
        <% @disabled.each do |m| %>
          <%= react_component("Merchant", {
            merchant: m,
            url: admin_merchant_path(m.id),
            auth_token: form_authenticity_token.to_s
          }) %>
        <% end %>
      </ul>
    </div>

  </div>
</div>



