<h1><%= "#{@merchant.name}'s Items" %></h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h4><%= "Create a new item for #{@merchant.name}" %></h4>
      <%= render partial: 'form', 
           locals: {
                    item: @item,
                    button_text: 'Create Item'
           }  %>
    </div>
    <div class="col">
      <div id="all_items">
        <h2><%= "Enabled Items" %></h2>
        <ul id="enabled_items"><% @items.each do |item| %>
          <% if item.status == 'enabled' %>
          <%= link_to "#{item.name}", "/merchants/#{@merchant.id}/items/#{item.id}" %>
          <%= button_to 'Disable', "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {disable: true} %>
          <% end %>
          <% end %></ul>
        <h2><%= "Disabled Items" %></h2>
        <ul id="disabled_items"><% @items.each do |item| %>
          <% if item.status == 'disabled' %>
          <%= link_to "#{item.name}", "/merchants/#{@merchant.id}/items/#{item.id}" %>
          <%= button_to 'Enable', "/merchants/#{@merchant.id}/items/#{item.id}", method: :patch, params: {enable: true} %>
          <% end %>
          <% end %></ul>
      </div>
    </div>
    <div class="col">
      <div id="top_items">
        <h2><%= "#{@merchant.name}'s 5 Top-Revenue Items" %></h2>
        <% @top_items.each do |item| %>
        <p><%= link_to item.name, "/merchants/#{@merchant.id}/items/#{item.id}"%>
          <%= "Total Revenue Generated: #{number_to_currency(item.revenue/100)}" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>