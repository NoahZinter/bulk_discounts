<h1>Edit Item</h1>
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, params: {edit: true}, local: true do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, value: @item.name %>
  <br>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, value: @item.description %>
  <br>
  <br>
  <%= f.label :unit_price %>
  <br>
  <%= f.text_field :unit_price, value: @item.unit_price %>
  <br>
  <br>
  <%= f.submit "Submit" %>

<% end %>
