<h1><%="All Discounts for #{@merchant.name}" %> </h1>
<%= button_to "Create New Discount", merchants_new_discount_path, method: :get %>
<div class="row">
  <div class="col-sm">
    <div class="card text-dark bg-white mb-3" style="max-width: 18rem;">
      <div class="card-body">
        <p class="card-text"><% @bulk_discounts.each do |discount| %>
          <%= "Discount Quantity Threshold: #{discount.quantity_threshold}" %>
          <%= "Discount Percentage: #{discount.discount_percent}" %>
          <%= link_to "See Details for Discount Percentage: #{discount.discount_percent}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %>
          <%= button_to "Delete Discount Percentage #{discount.discount_percent}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm">
    <div class='card text-white bg-dark mb-3' style='max-width: 18rem;'>
      <div class='card-header'>Next 3 Holidays</div>
      <div class="card-body">
        <p class="card-text"><% @holidays.each do |holiday|%>
          <%= "Holiday: #{holiday['localName']}" %>
          <%= "Is on: #{holiday['date']}" %>
          <%= link_to "Create #{holiday['localName']} Discount", 
          merchants_holiday_discount_path %> </p>
        <% end %>
      </div>
    </div>
  </div>