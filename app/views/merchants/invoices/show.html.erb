<div class="col-lg-8">
<div class="row">
  <div class="col-lg-4 rounded" style="border: 2px red; padding: 15px">
    <div class="card " style="background-color: rgb(191, 202, 209);min-width: 480px">
      <div class="card-header" style="background-color: rgb(134, 153, 165)">
        <h4 class="card-title">Invoice # <%= @invoice.id %></h4>
        <h4><%= @invoice.formatted_time %></h4>
        <!-- <h4 style="padding-top: 8px; color: rgb(191, 202, 209);" class="card-title"><%= @invoice.id %> Status: <%= @invoice.status%></h4> -->
        <hr
          class="float-left"
          style="
            color: rgb(105, 0, 0);
            border: 2px solid rgb(112, 0, 0);
            width: 50%;
          "
        />
        <h4><%= @customer.first_name + ' ' + @customer.last_name %></h4>
        <h3>Invoice Revenue $<%= @invoice.revenue %></h3>
        <br>
      </div>
      <div class="card-body" style="background-color: rgb(217, 221, 222)">
        <!-- will eventually build as a react component for search and see pet info as modal -->
        <table class="table table-bordered">
          <tr>
            <th scope="col">#</th>
            <th>Name</th>
            <th>quantity</th>
            <th>status</th>
            <th>price</th>
            <th>id</th>
          </tr>
          <% @items.each_with_index do |item, index| %>
            <tr>
              <th scope="row"><%=index + 1%></th>
              <td><%= item.name %></td>
              <td><%= item.quantity %></td>
              <td> <%= item.status %></td>
              <td>$<%= item.convert_dollars %></td>
              <td> <%= item.id %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
</div>