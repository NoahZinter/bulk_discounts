<div class="row justify-content-center">
  <div class="col-12">
    <h1>Invoices for <%= @merchant.name  %></h1>
  </div>
  <div class="col-8">
    <table class="table">
      <tr>
        <th>Invoice ID</th>
      </tr>
      <% @invoices.each do |invoice| %>
        <tr>
          <td> <%= link_to invoice.id, "/merchants/#{@merchant.id}/invoices/#{invoice.id}" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>